# 开发环境配置
ENVIRONMENT=development

# Application
APP_NAME=DevOps Deployment Platform (Development)
DEBUG=true

# Server
HOST=0.0.0.0
PORT=9090

# Database - SQLite for development
DATABASE_URL=sqlite:///./devops_dev.db

# JWT - Development keys (NOT SECURE - change for production)
SECRET_KEY=dev-secret-key-for-local-development-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Encryption - Development key (NOT SECURE - change for production)
ENCRYPTION_KEY=dev-encryption-key-32-bytes-local-only

# File Storage
WORK_DIR=./work_dev
ARTIFACTS_DIR=./artifacts_dev
LOGS_DIR=./logs_dev
MAX_ARTIFACTS_SIZE_MB=512

# Deployment
MAX_CONCURRENT_DEPLOYMENTS=3
BUILD_TIMEOUT_SECONDS=1800
SSH_TIMEOUT_SECONDS=180

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5050,http://localhost:3000,http://localhost:5173
