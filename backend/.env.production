# 生产环境配置
ENVIRONMENT=production

# Application
APP_NAME=DevOps Deployment Platform
DEBUG=false

# Server
HOST=0.0.0.0
PORT=9090

# Database - PostgreSQL recommended for production
DATABASE_URL=postgresql://devops:CHANGE_ME_PASSWORD@localhost:5432/devops_prod

# JWT - 生产环境必须使用强密钥！
SECRET_KEY=CHANGE_ME_TO_A_VERY_LONG_AND_RANDOM_SECRET_KEY_FOR_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption - 生产环境必须使用强加密密钥！
ENCRYPTION_KEY=CHANGE_ME_TO_32_BYTE_RANDOM_KEY_FOR_AES_256_ENCRYPTION

# File Storage
WORK_DIR=./work
ARTIFACTS_DIR=./artifacts
LOGS_DIR=./logs
MAX_ARTIFACTS_SIZE_MB=2048

# Deployment
MAX_CONCURRENT_DEPLOYMENTS=5
BUILD_TIMEOUT_SECONDS=3600
SSH_TIMEOUT_SECONDS=300

# CORS (comma-separated) - 仅允许生产域名
CORS_ORIGINS=https://your-production-domain.com
