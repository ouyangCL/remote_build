# Application
APP_NAME=DevOps Deployment Platform
DEBUG=false

# Server
HOST=0.0.0.0
PORT=9090

# Database
# SQLite (default)
DATABASE_URL=sqlite:///./devops.db
# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/devops

# JWT - CHANGE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption - CHANGE IN PRODUCTION!
ENCRYPTION_KEY=your-encryption-key-change-in-production-use-32-bytes-for-aes-256

# File Storage
WORK_DIR=./work
ARTIFACTS_DIR=./artifacts
LOGS_DIR=./logs
MAX_ARTIFACTS_SIZE_MB=1024

# Deployment
MAX_CONCURRENT_DEPLOYMENTS=5
BUILD_TIMEOUT_SECONDS=3600
SSH_TIMEOUT_SECONDS=300

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5050,http://localhost:3000

# Environment
ENVIRONMENT=development
